      "policy": "sameRange"
    },
    {
      "label": "Sync @types/react versions across workspace",
      "dependencies": ["@types/react", "@types/react-dom"],
      "dependencyTypes": ["dev"],
      "policy": "sameRange"
    },
    {
      "label": "Sync Vite versions across workspace",
      "dependencies": ["vite"],
      "dependencyTypes": ["dev"],
      "policy": "sameRange"
    },
    {
      "label": "Sync @types/node versions across workspace",
      "dependencies": ["@types/node"],
      "dependencyTypes": ["dev"],
      "policy": "sameRange"
    },
    {
      "label": "Sync @types/chrome versions across workspace",
      "dependencies": ["@types/chrome"],
      "dependencyTypes": ["dev"],
      "policy": "sameRange"
    },
    {
      "label": "Sync fp-ts versions across workspace",
      "dependencies": ["fp-ts"],
      "dependencyTypes": ["dev"],
      "policy": "sameRange"
    }
  ],
  "semverGroups": [
    {
