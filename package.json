{
  "name": "hbb-emu",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:hbbtv-api && pnpm run build:ui && pnpm run build:app-extension && pnpm run build:app-web",
    "build:app-extension": "pnpm --filter @hbb-emu/app build",
    "build:app-web": "pnpm --filter @hbb-emu/app  build",
    "build:hbbtv-api": "pnpm --filter @hbb-emu/hbbtv-api build",
    "build:ui": "pnpm --filter @hbb-emu/ui build",
    "dev:app-extension": "pnpm --filter @hbb-emu/app-extension dev",
    "dev:app-web": "pnpm --filter @hbb-emu/app-web dev",
    "clean": "pnpm run clean:hbbtv-api && pnpm run clean:ui && pnpm run clean:app-extension && pnpm run clean:app-web",
    "clean:app-extension": "pnpm --filter @hbb-emu/app-extension clean",
    "clean:app-web": "pnpm --filter @hbb-emu/app-web clean",
    "clean:ui": "pnpm --filter @hbb-emu/ui clean",
    "clean:hbbtv-api": "pnpm --filter @hbb-emu/hbbtv-api clean"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@tsconfig/node20": "^20.1.8",
    "@tsconfig/vite-react": "^7.0.2"
  }
}
