{
  "manifest_version": 3,
  "name": "HbbTV Emulator",
  "version": "1.0.0",
  "description": "HbbTV emulator extension with side panel",
  "permissions": [
    "sidePanel",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_title": "Open HbbTV Emulator"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}