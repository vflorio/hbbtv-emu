{
  "name": "@hbb-emu/chrome-v3-extension",
  "version": "1.0.0",
  "dependencies": {
    "@hbb-emu/core": "workspace:*",
    "@hbb-emu/hbbtv-api": "workspace:*",
    "@hbb-emu/runtime-chrome": "workspace:*",
    "@hbb-emu/runtime-web": "workspace:*",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@types/chrome": "0.1.29",
    "@types/node": "24.10.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "5.1.0",
    "babel-plugin-react-compiler": "1.0.0",
    "fp-ts": "2.16.11",
    "globals": "16.5.0",
    "typescript": "5.9.3",
    "vite": "7.2.2"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "pnpm build:ui && pnpm build:background-script && pnpm build:bridge-script && pnpm build:content-script && pnpm build:assets",
    "build:assets": "cp -r public/* dist/",
    "build:background-script": "vite build --config vite.background-script.config.ts",
    "build:bridge-script": "vite build --config vite.bridge-script.config.ts",
    "build:content-script": "vite build --config vite.content-script.config.ts",
    "build:ui": "vite build",
    "clean": "rm -rf dist",
    "dev:app": "vite",
    "preview": "vite preview"
  },
  "type": "module"
}
